<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_simple_pip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple Pip Example" />

    <Button
        android:id="@+id/btn_custom_pip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Pip Example" />

    <Button
        android:id="@+id/btn_overlay_video_resize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resizeable Video Overlay Example" />

    <Button
            android:id="@+id/btn_overlay_web_resize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resizeable Web Overlay Example" />

</LinearLayout>